<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unito.prog3.mailclient.controller.ComposeController">
    <content>
        <VBox spacing="8" style="-fx-padding: 12;">
            <TextField fx:id="toField" promptText="Destinatari (virgole)"/>
            <TextField fx:id="subjectField" promptText="Oggetto"/>
            <TextArea fx:id="bodyArea" promptText="Scrivi il messaggio..." VBox.vgrow="ALWAYS"/>
            <HBox spacing="8" alignment="CENTER_RIGHT">
                <Button text="Annulla" onAction="#onCancel"/>
                <Button text="Invia" onAction="#onSend"/>
            </HBox>
        </VBox>
    </content>

</DialogPane>

